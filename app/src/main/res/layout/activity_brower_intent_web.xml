<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.examapplication.BrowerIntentWebActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_uri"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="http://www.tute.edu.cn"
        android:inputType="textUri"/>
    <Button
        android:id="@+id/broswer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_uri"
        android:layout_alignBottom="@+id/editText_uri"
        android:layout_alignParentEnd="true"
        android:text="@string/broswer_button"
        android:onClick="onClickBroswerIntentWeb"/>


</RelativeLayout>
